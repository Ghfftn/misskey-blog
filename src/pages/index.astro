// src/pages/index.astro
import { CONFIG } from '../config';

// ÊñáÊú¨Â§ÑÁêÜÂáΩÊï∞
const formatNoteText = (text) => {
    if (!text) return '';
    let formatted = text
        .replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;").replace(/'/g, "&#039;");
    const urlRegex = /(https?:\/\/[^\s]+)/g;
    formatted = formatted.replace(urlRegex, (url) => {
        return `<a href="${url}" target="_blank" class="note-link">${url}</a>`;
    });
    formatted = formatted.replace(/\n/g, '<br>');
    return formatted;
};

// --- 1. Ëß£ÊûêËÅîÈÇ¶Ë¥¶Âè∑ ---
const parseHandle = (handle) => {
    const clean = handle.startsWith('@') ? handle.slice(1) : handle;
    const parts = clean.split('@');
    if (parts.length < 2) return { username: 'error', instance: 'https://sshup.com' };
    return { username: parts[0], instance: `https://${parts[1]}` };
};
const { username: USER_NAME, instance: INSTANCE_URL } = parseHandle(CONFIG.FEDIVERSE_HANDLE);

let mediaNotes = []; 
let textNotes = [];
let errorMsg = '';
let dynamicDesc = CONFIG.SITE_DESC; 

// --- 2. Ëá™Âä®Ëé∑Âèñ User ID ---
async function fetchUserId() {
    try {
        const userRes = await fetch(`${INSTANCE_URL}/api/users/show`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ username: USER_NAME }),
        });
        if (!userRes.ok) throw new Error('User not found');
        const userData = await userRes.json();
        return userData.id;
    } catch (e) {
        console.error("Failed to fetch User ID:", e);
        return null;
    }
}

try {
  const userId = await fetchUserId();
  if (!userId) throw new Error(`Êâæ‰∏çÂà∞Áî®Êà∑: ${CONFIG.FEDIVERSE_HANDLE}`);

  const response = await fetch(`${INSTANCE_URL}/api/users/notes`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      userId: userId,
      limit: 60,
      includeReplies: false, 
      includeMyRenotes: true 
    }),
  });

  if (!response.ok) throw new Error('API Error');
  const allNotes = await response.json();

  if (allNotes && allNotes.length > 0) {
      const latest = allNotes[0].renote || allNotes[0];
      let rawText = latest.text || (latest.files.length > 0 ? `[ÂàÜ‰∫´‰∫Ü ${latest.files.length} Âº†ÂõæÁâá]` : '');
      if (rawText) {
          rawText = rawText.replace(/\n/g, ' '); 
          dynamicDesc = rawText.length > 120 ? rawText.substring(0, 117) + '...' : rawText;
          if (allNotes[0].renote) dynamicDesc = `üîÑ ËΩ¨Âèë: ${dynamicDesc}`;
      }
  }

  allNotes.forEach(note => {
    const target = note.renote || note;
    if (target.replyId) return; 
    const hasMedia = target.files && target.files.length > 0;
    if (hasMedia) mediaNotes.push(note);
    else textNotes.push(note);
  });
} catch (e) {
  errorMsg = `System Offline: ${e.message}`;
}

const formatDate = (isoString) => {
    return new Date(isoString).toLocaleDateString('zh-CN', {
        month: 'numeric', day: 'numeric', hour: '2-digit', minute:'2-digit'
    });
};

const PAGE_TITLE = `${CONFIG.SITE_TITLE} | ${CONFIG.SITE_SUBTITLE}`;

// --- 3. ÁîüÊàêÊó†ÈôêÊªöÂä®ÁöÑËµ∞È©¨ÁÅØÂàóË°® ---
// ÊääÁî®Êà∑ÈÖçÁΩÆÁöÑÂàóË°®ÈáçÂ§çÊãºÊé•‰∏ÄÊ¨°ÔºåÁ°Æ‰øùÊªöÂä®Êó∂Êó†ÁºùË°îÊé•
const marqueeItems = [
    ...CONFIG.THEME.MARQUEE_TEXT,
    ...CONFIG.THEME.MARQUEE_TEXT
];
---

<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{PAGE_TITLE}</title>
    <link rel="icon" href={CONFIG.SITE_ICON} />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    
    <meta name="description" content={dynamicDesc} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={PAGE_TITLE} />
    <meta property="og:description" content={dynamicDesc} />
    <meta property="og:image" content={CONFIG.SITE_ICON} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={PAGE_TITLE} />
    <meta name="twitter:description" content={dynamicDesc} />
    <meta name="twitter:image" content={CONFIG.SITE_ICON} />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    
    <style define:vars={{ 
        titleFrom: CONFIG.THEME.TITLE_GRADIENT_FROM,
        titleTo: CONFIG.THEME.TITLE_GRADIENT_TO,
        hoverColor: CONFIG.THEME.BUTTON_HOVER_COLOR,
        glowColor: CONFIG.THEME.BACKGROUND_GLOW_COLOR,
        cardOpacity: CONFIG.THEME.CARD_OPACITY,
        userColor: CONFIG.THEME.USERNAME_COLOR,
        textColor: CONFIG.THEME.POST_TEXT_COLOR
    }}>
        :root {
            --bg-color: #050505;
            --card-bg: rgba(24, 24, 27, var(--cardOpacity));
            --border: rgba(255, 255, 255, 0.1);        
            --text-main: var(--textColor);     
            --text-sub: #a1a1aa;      
            
            --terminal-green: var(--hoverColor); 
            --accent-gradient: linear-gradient(135deg, var(--titleFrom) 0%, var(--titleTo) 100%);
            --link-color: #3b82f6; 
        }

        :global(.note-link) { color: var(--link-color); text-decoration: none; word-break: break-all; }
        :global(.note-link:hover) { text-decoration: underline; color: #60a5fa; }

        body { 
            font-family: 'Inter', sans-serif; margin: 0; padding: 0;
            color: var(--text-main); height: 100vh;
            background-color: var(--bg-color);
            background-image: 
                radial-gradient(circle at 50% -10%, var(--glowColor) 0%, transparent 60%),
                radial-gradient(circle at 90% 90%, #0f172a 0%, transparent 40%);
            background-attachment: fixed;
            overflow: hidden; display: flex; flex-direction: column;
        }

        .header-bar {
            height: 80px; padding: 0 30px; 
            display: flex; justify-content: space-between; align-items: center;
            border-bottom: none; background: transparent; z-index: 10; flex-shrink: 0;
            background: linear-gradient(to bottom, rgba(5,5,5,0.8) 0%, rgba(5,5,5,0) 100%);
            gap: 20px;
        }

        .header-left { display: flex; flex-direction: column; justify-content: center; min-width: 150px; }
        
        h1 { 
            font-size: 1.5rem; font-weight: 800; margin: 0; letter-spacing: -0.5px;
            background: var(--accent-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 2px 10px rgba(0,0,0,0.5));
            display: flex; align-items: center; gap: 10px;
        }
        .header-subtitle {
            font-size: 0.8rem; font-weight: 400; color: var(--text-sub); 
            font-family: 'JetBrains Mono', monospace; opacity: 0.7;
            border-left: 1px solid rgba(255,255,255,0.2); padding-left: 10px;
            letter-spacing: 1px;
        }

        .header-marquee {
            flex: 1; overflow: hidden; position: relative; height: 40px; display: flex; align-items: center;
            mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
            -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
        }

        .marquee-track {
            display: flex; gap: 40px; 
            animation: marquee-scroll 25s linear infinite;
            width: max-content;
        }
        .header-marquee:hover .marquee-track { animation-play-state: paused; }

        .reaction-item {
            font-size: 1.2rem; cursor: pointer; user-select: none;
            transition: all 0.1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            opacity: 0.6; filter: grayscale(0.5);
            transform-origin: center center;
            /* ÂÖÅËÆ∏ÊñáÊú¨‰∏çÊç¢Ë°åÔºåÈò≤Ê≠¢Áü≠ËØ≠Ë¢´ÊâìÊñ≠ */
            white-space: nowrap;
        }
        .reaction-item:hover { transform: scale(1.3); opacity: 1; filter: grayscale(0); }

        @keyframes pop-bounce {
            0% { transform: scale(1); }
            40% { transform: scale(1.6); text-shadow: 0 0 20px rgba(255,255,255,0.8); filter: brightness(2); }
            80% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }
        .reaction-item.active-pop {
            animation: pop-bounce 0.4s ease-out forwards;
            opacity: 1; filter: grayscale(0) brightness(1.2); color: #fff;
        }
        @keyframes marquee-scroll {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        .header-right { display: flex; align-items: center; gap: 15px; min-width: 200px; justify-content: flex-end; }
        
        .status-badge {
            font-family: 'JetBrains Mono', monospace; font-size: 0.75rem;
            color: var(--terminal-green); background: rgba(0, 0, 0, 0.3);
            padding: 4px 10px; border-radius: 4px; 
            border: 1px solid var(--terminal-green); 
            opacity: 0.8;
            display: flex; align-items: center; gap: 6px; backdrop-filter: blur(4px);
        }
        .status-dot { width: 6px; height: 6px; background: var(--terminal-green); border-radius: 50%; box-shadow: 0 0 8px var(--terminal-green); animation: pulse 2s infinite; }
        
        .rss-btn {
            color: var(--text-sub); text-decoration: none; display: flex; align-items: center; gap: 6px;
            font-size: 0.8rem; font-weight: 600; padding: 6px 12px; border-radius: 6px;
            border: 1px solid rgba(255,255,255,0.1); transition: all 0.2s;
            background: rgba(0,0,0,0.2); backdrop-filter: blur(4px);
        }
        .rss-btn:hover { border-color: var(--terminal-green); color: var(--terminal-green); background: rgba(255, 255, 255, 0.05); }
        .rss-icon { width: 16px; height: 16px; fill: currentColor; }

        .dashboard-container { flex: 1; display: grid; grid-template-columns: 1fr 1fr; gap: 0; overflow: hidden; padding-top: 10px; }
        .scroll-column { height: 100%; overflow-y: auto; padding: 0 20px 40px 20px; scroll-behavior: smooth; scrollbar-width: thin; scrollbar-color: rgba(255,255,255,0.1) transparent; }
        .scroll-column::-webkit-scrollbar { width: 4px; }
        .scroll-column::-webkit-scrollbar-track { background: transparent; }
        .scroll-column::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 2px; }
        .column-left { border-right: 1px solid rgba(255,255,255,0.05); }

        .card { background: var(--card-bg); border: 1px solid var(--border); border-radius: 12px; padding: 20px; margin-bottom: 20px; transition: all 0.2s ease; animation: fade-in-up 0.5s ease-out forwards; opacity: 0; }
        .card:hover { transform: translateY(-2px); border-color: var(--terminal-green); background: rgba(30, 30, 35, 0.8); }

        .user-header { display: flex; align-items: center; gap: 10px; margin-bottom: 12px; }
        .avatar { width: 36px; height: 36px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.1); }
        .username { font-weight: 700; font-size: 0.95rem; color: var(--userColor); }
        .text-content { line-height: 1.6; color: var(--text-main); font-size: 0.9rem; margin-bottom: 12px; overflow-wrap: break-word; }
        .renote-box { background: rgba(0,0,0,0.3); border-left: 2px solid #555; padding: 10px; margin-bottom: 10px; font-size: 0.85em; color: #999; font-family: 'JetBrains Mono', monospace; }
        .media-grid { display: grid; gap: 4px; border-radius: 8px; overflow: hidden; margin-bottom: 12px; }
        .media-grid[data-count="1"] { grid-template-columns: 1fr; }
        .media-grid[data-count="2"] { grid-template-columns: 1fr 1fr; }
        .media-grid[data-count="3"], .media-grid[data-count="4"] { grid-template-columns: 1fr 1fr; }
        .media-item { width: 100%; height: 180px; object-fit: cover; cursor: zoom-in; background: #222; transition: opacity 0.2s; }
        .media-item:hover { opacity: 0.8; }
        .card-footer { padding-top: 12px; border-top: 1px solid var(--border); display: flex; justify-content: space-between; align-items: center; font-size: 0.75em; color: #666; font-family: 'JetBrains Mono', monospace; }
        .footer-right { display: flex; align-items: center; gap: 12px; }
        .renote-icon-svg { width: 16px; height: 16px; fill: var(--text-sub); opacity: 0.7; }
        .original-link { color: #fff; text-decoration: none; font-weight: 600; padding: 3px 8px; border-radius: 4px; background: rgba(255,255,255,0.05); }
        .original-link:hover { background: var(--terminal-green); color: #000; }
        #lightbox { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.9); display: flex; justify-content: center; align-items: center; z-index: 9999; opacity: 0; pointer-events: none; transition: opacity 0.2s; backdrop-filter: blur(10px); }
        #lightbox.active { opacity: 1; pointer-events: all; }
        #lightbox img { max-width: 95%; max-height: 95%; border-radius: 4px; box-shadow: 0 0 30px rgba(0,0,0,0.5); }
        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
        @keyframes fade-in-up { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        @media (max-width: 768px) {
            body { height: auto; overflow: auto; display: block; }
            .header-bar { position: sticky; top: 0; padding: 0 15px; background: rgba(5,5,5,0.95); }
            .header-marquee { display: none; }
            .dashboard-container { display: block; padding-top: 10px;}
            .scroll-column { height: auto; overflow: visible; padding: 10px 15px; }
            .column-left { border-right: none; border-bottom: 1px solid var(--border); }
        }
    </style>
</head>
<body>
    <header class="header-bar">
        <div class="header-left">
            <h1>
                {CONFIG.SITE_TITLE}
                <span class="header-subtitle">{CONFIG.SITE_SUBTITLE}</span>
            </h1>
        </div>
        
        <div class="header-marquee">
            <div class="marquee-track">
                {/* ÈÅçÂéÜÁî®Êà∑Ëá™ÂÆö‰πâÁöÑÂàóË°® */}
                {marqueeItems.map(item => (
                    <div class="reaction-item">{item}</div>
                ))}
            </div>
        </div>

        <div class="header-right">
            <div class="status-badge"><span class="status-dot"></span>SYSTEM ONLINE</div>
            <a href="/rss.xml" class="rss-btn" target="_blank" title="Subscribe RSS">
                <svg class="rss-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/></svg>
                RSS
            </a>
        </div>
    </header>

    <main class="dashboard-container">
        <div class="scroll-column column-left">
            {errorMsg && <div style="color:red; margin-bottom:20px;">{errorMsg}</div>}
            {mediaNotes.map((note, index) => {
                const target = note.renote || note;
                const isRenote = !!note.renote;
                return (
                    <article class="card" style={`animation-delay: ${index * 0.05}s`}>
                        <div class="user-header">
                            <img class="avatar" src={target.user.avatarUrl} loading="lazy"/>
                            <span class="username">{target.user.name || target.user.username}</span>
                        </div>
                        {target.text && <div class="text-content" set:html={formatNoteText(target.text)}></div>}
                        {target.files && (
                            <div class="media-grid" data-count={target.files.length}>
                                {target.files.map(file => (
                                    file.type.startsWith('image') ?
                                    <img src={file.thumbnailUrl || file.url} class="media-item" loading="lazy" data-full-src={file.url} /> 
                                    : <video src={file.url} controls style="width:100%"></video>
                                ))}
                            </div>
                        )}
                        <div class="card-footer">
                            <span class="date">{formatDate(note.createdAt)}</span>
                            <div class="footer-right">
                                {isRenote && (
                                    <svg class="renote-icon-svg" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M7 7h10v3l4-4-4-4v3H5v6h2V7zm10 10H7v-3l-4 4 4 4v-3h12v-6h-2v4z"/></svg>
                                )}
                                <a href={`${INSTANCE_URL}/notes/${note.id}`} target="_blank" class="original-link">RAW ‚Üó</a>
                            </div>
                        </div>
                    </article>
                )
            })}
        </div>
        <div class="scroll-column column-right">
            {textNotes.map((note, index) => {
                const isRenote = !!note.renote;
                const target = isRenote ? note.renote : note;
                return (
                    <article class="card" style={`animation-delay: ${(index * 0.05) + 0.2}s`}>
                        <div class="user-header">
                            <img class="avatar" src={target.user.avatarUrl} loading="lazy"/>
                            <div class="username">{target.user.name || target.user.username}</div>
                        </div>
                        {target.text && <div class="text-content" set:html={formatNoteText(target.text)}></div>}
                        {isRenote && note.text && (
                            <div class="renote-box" set:html={`// comment: <br> ${formatNoteText(note.text)}`}></div>
                        )}
                        <div class="card-footer">
                            <span class="date">{formatDate(note.createdAt)}</span>
                            <div class="footer-right">
                                {isRenote && (
                                    <svg class="renote-icon-svg" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M7 7h10v3l4-4-4-4v3H5v6h2V7zm10 10H7v-3l-4 4 4 4v-3h12v-6h-2v4z"/></svg>
                                )}
                                <a href={`${INSTANCE_URL}/notes/${note.id}`} target="_blank" class="original-link">RAW ‚Üó</a>
                            </div>
                        </div>
                    </article>
                )
            })}
        </div>
    </main>
    <div id="lightbox"><img id="lightbox-img" src="" alt="Full view" /></div>
    
    <script>
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        document.querySelectorAll('.media-item').forEach(img => {
            img.addEventListener('click', (e) => {
                lightboxImg.src = e.target.getAttribute('data-full-src');
                lightbox.classList.add('active');
            });
        });
        lightbox.addEventListener('click', () => lightbox.classList.remove('active'));

        const reactions = document.querySelectorAll('.reaction-item');
        function triggerPop(element) {
            element.classList.remove('active-pop');
            void element.offsetWidth; 
            element.classList.add('active-pop');
        }
        reactions.forEach(item => {
            item.addEventListener('click', () => triggerPop(item));
        });
        setInterval(() => {
            const randomIndex = Math.floor(Math.random() * reactions.length);
            const randomItem = reactions[randomIndex];
            if (!randomItem.matches(':hover')) {
                triggerPop(randomItem);
            }
        }, 800);
    </script>
</body>
</html>