        .container { max-width: 1400px; margin: 0 auto; padding: 20px; }

        .hero-section {
            padding: 80px 20px 40px;
            text-align: center;
            /* æ ‡é¢˜ä¼˜å…ˆåŠ è½½åŠ¨ç”» */
            animation: fade-in-up 0.8s ease-out forwards;
        }

        h1 { 
            font-size: 3.5rem; font-weight: 800; margin: 0 0 10px 0; letter-spacing: -1px; line-height: 1.1;
        }

        .gradient-text {
            background: var(--accent-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 30px rgba(74, 222, 128, 0.2));
        }

        .subtitle {
            font-family: 'JetBrains Mono', monospace; color: var(--text-sub); font-size: 1rem; margin-top: 15px;
            opacity: 0.8;
        }
        
        .status-badge {
            display: inline-block; background: rgba(74, 222, 128, 0.05); color: #4ade80;
            padding: 6px 12px; border-radius: 99px; font-size: 0.8rem;
            font-family: 'JetBrains Mono', monospace; border: 1px solid rgba(74, 222, 128, 0.2);
