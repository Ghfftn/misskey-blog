const INSTANCE = 'https://sshup.com'; 
const USER_ID = 'aid0j1fyuf3i0003'; 
const SITE_TITLE = 'å¦ææ³°æ¥ | Digital Garden';
const SITE_DESC = 'Connecting to fediverse... | Misskey åŠ¨æ€åŒæ­¥';
// ä½ çš„å¤´åƒ/å›¾æ ‡åœ°å€
const SITE_ICON = 'https://sshup.com/files/thumbnail-b457fa5b-1189-427d-baa7-389673f93283';
// -----------------

let mediaNotes = []; 
let textNotes = [];
let errorMsg = '';

try {
  const response = await fetch(`${INSTANCE}/api/users/notes`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      userId: USER_ID,
      limit: 40, 
      includeReplies: false, 
      includeMyRenotes: true 
    }),
  });

  if (!response.ok) throw new Error('API è¯·æ±‚å¤±è´¥');
  const allNotes = await response.json();

  allNotes.forEach(note => {
    const target = note.renote || note;
    const hasMedia = target.files && target.files.length > 0;
    if (hasMedia) {
      mediaNotes.push(note);
    } else {
      textNotes.push(note);
    }
  });

} catch (e) {
  errorMsg = 'System Malfunction: æ— æ³•è¿æ¥è”é‚¦å®‡å®™ä¿¡å·ã€‚';
  console.error(e);
}

const formatDate = (isoString) => {
    return new Date(isoString).toLocaleDateString('zh-CN', {
        month: 'numeric', day: 'numeric', hour: '2-digit', minute:'2-digit'
    });
};
