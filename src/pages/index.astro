const INSTANCE = 'https://sshup.com'; 
const USER_ID = 'aid0j1fyuf3i0003'; 
const SITE_TITLE = 'Âê¶ÊûÅÊ≥∞Êù• | Digital Garden';
const SITE_DESC = 'Connecting to fediverse... | Misskey Âä®ÊÄÅÂêåÊ≠•';
// ‰ΩøÁî®‰Ω†Êèê‰æõÁöÑÂõæÁâá‰Ωú‰∏∫ÂõæÊ†áÂíåÁ§æ‰∫§Âç°ÁâáÂ∞ÅÈù¢
const SITE_ICON = 'https://sshup.com/files/thumbnail-b457fa5b-1189-427d-baa7-389673f93283';
// -----------------

let mediaNotes = []; 
let textNotes = [];
let errorMsg = '';

try {
  const response = await fetch(`${INSTANCE}/api/users/notes`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      userId: USER_ID,
      limit: 40, // ËøôÈáåÊéßÂà∂ÊäìÂèñÊï∞Èáè
      includeReplies: false, 
      includeMyRenotes: true 
    }),
  });

  if (!response.ok) throw new Error('API ËØ∑Ê±ÇÂ§±Ë¥•');
  const allNotes = await response.json();

  allNotes.forEach(note => {
    const target = note.renote || note;
    const hasMedia = target.files && target.files.length > 0;
    if (hasMedia) {
      mediaNotes.push(note);
    } else {
      textNotes.push(note);
    }
  });

} catch (e) {
  errorMsg = 'System Malfunction: Êó†Ê≥ïËøûÊé•ËÅîÈÇ¶ÂÆáÂÆô‰ø°Âè∑„ÄÇ';
  console.error(e);
}

const formatDate = (isoString) => {
    return new Date(isoString).toLocaleDateString('zh-CN', {
        month: 'numeric', day: 'numeric', hour: '2-digit', minute:'2-digit'
    });
};
---

<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{SITE_TITLE}</title>
    
    <link rel="icon" href={SITE_ICON} />
    
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={SITE_TITLE} />
    <meta property="og:description" content={SITE_DESC} />
    <meta property="og:image" content={SITE_ICON} />
    <meta property="og:url" content="https://blog.sshup.com" />
    <meta name="twitter:card" content="summary" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #000000;
            --card-bg: rgba(20, 20, 25, 0.2); 
            --border: rgba(255, 255, 255, 0.08);        
            --text-main: #ffffff;     
            --text-sub: #a1a1aa;      
            --accent-gradient: linear-gradient(135deg, #4ade80 0%, #3b82f6 50%, #8b5cf6 100%);
        }

        body { 
            font-family: 'Inter', sans-serif; 
            margin: 0; 
            padding: 0;
            color: var(--text-main);
            min-height: 100vh;
            background-color: var(--bg-color);
            overflow-x: hidden;
        }

        /* --- ÊûÅÂÖâËÉåÊôØ --- */
        .ambient-light {
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            z-index: -1;
            overflow: hidden;
            pointer-events: none;
        }

        .blob {
            position: absolute;
            border-radius: 50%;
            filter: blur(120px);
            mix-blend-mode: screen;
        }

        .blob-green {
            top: -20%; left: -10%; width: 120vw; height: 120vh;
            background: rgba(74, 222, 128, 0.18);
            animation: flow-1 18s infinite alternate ease-in-out;
        }
        .blob-blue {
            bottom: -20%; right: -10%; width: 130vw; height: 130vh;
            background: rgba(59, 130, 246, 0.15);
            animation: flow-2 22s infinite alternate ease-in-out;
        }
        .blob-purple {
            top: 10%; left: 10%; width: 110vw; height: 110vh;
            background: rgba(168, 85, 247, 0.15);
            animation: flow-3 25s infinite alternate ease-in-out;
        }

        @keyframes flow-1 { 0% { transform: translate(0, 0); } 100% { transform: translate(10vw, 10vh); } }
        @keyframes flow-2 { 0% { transform: translate(0, 0); } 100% { transform: translate(-10vw, -10vh); } }
        @keyframes flow-3 { 0% { transform: translate(0, 0) rotate(0deg); } 100% { transform: translate(-5vw, 5vh) rotate(20deg); } }

        /* ‚úÖ 4. ÂÖ•Âú∫Âä®ÁîªÔºöËÆ©ÂÜÖÂÆπ‰ºòÈõÖÊµÆÁé∞ */
        @keyframes fade-in-up {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .container { max-width: 1400px; margin: 0 auto; padding: 20px; }

        .hero-section {
            padding: 80px 20px 40px;
            text-align: center;
            position: relative;
            z-index: 1;
            /* Ê†áÈ¢ò‰ºòÂÖàÂä†ËΩΩÂä®Áîª */
            animation: fade-in-up 0.8s ease-out forwards;
        }

        h1 { 
            font-size: 3.5rem; font-weight: 800; margin: 0 0 10px 0; letter-spacing: -1px; line-height: 1.1;
            text-shadow: 0 5px 30px rgba(0,0,0,0.9);
        }

        .gradient-text {
            background: var(--accent-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 25px rgba(74, 222, 128, 0.5));
        }

        .subtitle {
            font-family: 'JetBrains Mono', monospace; color: var(--text-sub); font-size: 1rem; margin-top: 15px;
            background: rgba(0,0,0,0.4); display: inline-block; padding: 5px 10px; border-radius: 4px;
        }
        
        .status-badge {
            display: inline-block; background: rgba(74, 222, 128, 0.1); color: #4ade80;
            padding: 6px 12px; border-radius: 99px; font-size: 0.8rem;
            font-family: 'JetBrains Mono', monospace; border: 1px solid rgba(74, 222, 128, 0.3);
            margin-bottom: 20px; backdrop-filter: blur(4px);
            box-shadow: 0 0 15px rgba(74, 222, 128, 0.1);
        }

        .layout-grid {
            display: grid; grid-template-columns: 1fr 1fr; gap: 24px; align-items: start;
            position: relative; z-index: 1;
        }

        .column-header {
            font-family: 'JetBrains Mono', monospace; color: var(--text-sub); font-size: 0.85em;
            margin-bottom: 20px; text-transform: uppercase; letter-spacing: 1px;
            display: flex; align-items: center; gap: 8px; text-shadow: 0 2px 4px rgba(0,0,0,0.5);
            animation: fade-in-up 1s ease-out forwards;
        }
        .column-header::before {
            content: ''; width: 8px; height: 8px; background: #4ade80; border-radius: 50%; box-shadow: 0 0 10px #4ade80;
        }

        .card {
            background: var(--card-bg);
            backdrop-filter: blur(25px) saturate(120%); -webkit-backdrop-filter: blur(25px) saturate(120%);
            border: 1px solid var(--border); border-radius: 16px; padding: 24px; margin-bottom: 24px;
            position: relative; overflow: hidden; transition: all 0.3s ease;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            
            /* ÁªôÊâÄÊúâÂç°ÁâáÂä†ÂàùÂßãÈÄèÊòéÔºåÈÖçÂêà JS ÂÆûÁé∞‰∫§ÈîôÂä†ËΩΩ */
            opacity: 0; 
            animation: fade-in-up 0.6s ease-out forwards;
        }

        .card:hover {
            transform: translateY(-4px); border-color: rgba(74, 222, 128, 0.4); 
            box-shadow: 0 10px 50px -10px rgba(0, 0, 0, 0.5); background: rgba(30, 30, 35, 0.3); 
        }
        
        .card::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; height: 1px;
            background: linear-gradient(90deg, transparent, rgba(74, 222, 128, 0.5), transparent);
            opacity: 0; transition: opacity 0.3s;
        }
        .card:hover::before { opacity: 1; }

        .user-header { display: flex; align-items: center; gap: 12px; margin-bottom: 16px; }
        .avatar { width: 44px; height: 44px; border-radius: 10px; object-fit: cover; border: 2px solid rgba(255,255,255,0.1); }
        .username { font-weight: 700; color: #fff; font-size: 1rem; text-shadow: 0 2px 4px rgba(0,0,0,0.5); }
        
        .text-content { line-height: 1.7; color: #e4e4e7; font-size: 0.95rem; margin-bottom: 16px; }
        
        .renote-box {
            background: rgba(0,0,0,0.25); border-left: 2px solid #a1a1aa; padding: 12px; margin-bottom: 12px;
            border-radius: 0 8px 8px 0; font-size: 0.9em; color: var(--text-sub); font-family: 'JetBrains Mono', monospace;
        }

        .media-grid { display: grid; gap: 4px; border-radius: 12px; overflow: hidden; margin-bottom: 16px; }
        .media-grid[data-count="1"] { grid-template-columns: 1fr; }
        .media-grid[data-count="2"] { grid-template-columns: 1fr 1fr; }
        .media-grid[data-count="3"], .media-grid[data-count="4"] { grid-template-columns: 1fr 1fr; }

        .media-item {
            width: 100%; height: 220px; object-fit: cover; cursor: zoom-in; 
            transition: opacity 0.2s; background: #27272a;
        }
        .media-item:hover { opacity: 0.8; }

        .card-footer { 
            padding-top: 16px; border-top: 1px solid var(--border); 
            display: flex; justify-content: space-between; align-items: center;
            font-size: 0.8em; color: #a1a1aa; font-family: 'JetBrains Mono', monospace;
        }
        .original-link { 
            color: #fff; text-decoration: none; font-weight: 600; padding: 4px 10px; border-radius: 4px;
            background: rgba(255,255,255,0.1); transition: background 0.2s;
        }
        .original-link:hover { background: rgba(74, 222, 128, 0.2); }

        #lightbox {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.9);
            display: flex; justify-content: center; align-items: center; z-index: 9999;
            opacity: 0; pointer-events: none; transition: opacity 0.2s; backdrop-filter: blur(20px);
        }
        #lightbox.active { opacity: 1; pointer-events: all; }
        #lightbox img {
            max-width: 90%; max-height: 90%; border-radius: 8px;
            box-shadow: 0 0 50px rgba(0,0,0,0.8); border: 1px solid #333;
        }

        @media (max-width: 768px) {
            .layout-grid { grid-template-columns: 1fr; }
            h1 { font-size: 2.5rem; }
            .hero-section { padding: 40px 20px; }
        }
    </style>
</head>
<body>

    <div class="ambient-light">
        <div class="blob blob-green"></div>
        <div class="blob blob-blue"></div>
        <div class="blob blob-purple"></div>
    </div>

    <section class="hero-section">
        <div class="status-badge">‚óè System Online</div>
        <h1>
            <span class="gradient-text">Âê¶ÊûÅÊ≥∞Êù•</span>
            <br />
            <span style="color: white; font-size: 0.8em;">Universe</span>
        </h1>
        <div class="subtitle">
            > connecting to fediverse...<br>
            > fetching data from sshup.com...
        </div>
    </section>

    <div class="container">
        {errorMsg && <div style="background:rgba(127, 29, 29, 0.4); color:#fca5a5; padding:15px; border-radius:8px; text-align:center; border:1px solid #7f1d1d; margin-bottom:20px; backdrop-filter:blur(5px);">‚ö†Ô∏è {errorMsg}</div>}

        <div class="layout-grid">
            
            <div class="column left">
                <div class="column-header">/media/images</div>
                {mediaNotes.map((note, index) => {
                    const target = note.renote || note;
                    return (
                        <article class="card" style={`animation-delay: ${index * 0.1}s`}>
                            <div class="user-header">
                                <img class="avatar" src={target.user.avatarUrl} loading="lazy"/>
                                <span class="username">{target.user.name || target.user.username}</span>
                            </div>

                            {target.text && <div class="text-content">{target.text}</div>}

                            {target.files && (
                                <div class="media-grid" data-count={target.files.length}>
                                    {target.files.map(file => (
                                        file.type.startsWith('image') ?
                                        <img src={file.thumbnailUrl || file.url} class="media-item" loading="lazy" data-full-src={file.url} /> 
                                        : <video src={file.url} controls style="width:100%"></video>
                                    ))}
                                </div>
                            )}

                            <div class="card-footer">
                                <span class="date">{formatDate(note.createdAt)}</span>
                                <a href={`${INSTANCE}/notes/${note.id}`} target="_blank" class="original-link">RAW ‚Üó</a>
                            </div>
                        </article>
                    )
                })}
            </div>

            <div class="column right">
                <div class="column-header">/var/log/thoughts</div>
                {textNotes.map((note, index) => {
                    const isRenote = !!note.renote;
                    const target = isRenote ? note.renote : note;

                    return (
                        <article class="card" style={`animation-delay: ${(index * 0.1) + 0.2}s`}>
                            {isRenote && <div class="renote-box">üîÑ FWD: re-transmission</div>}
                            
                            <div class="user-header">
                                <img class="avatar" src={target.user.avatarUrl} loading="lazy"/>
                                <div class="username">{target.user.name || target.user.username}</div>
                            </div>

                            <div class="text-content">{target.text}</div>

                            {isRenote && note.text && (
                                <div class="renote-box">
                                    // comment: <br>
                                    {note.text}
                                </div>
                            )}

                            <div class="card-footer">
                                <span class="date">{formatDate(note.createdAt)}</span>
                                <a href={`${INSTANCE}/notes/${note.id}`} target="_blank" class="original-link">RAW ‚Üó</a>
                            </div>
                        </article>
                    )
                })}
            </div>

        </div>
    </div>

    <div id="lightbox">
        <img id="lightbox-img" src="" alt="Full view" />
    </div>

    <script>
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        const images = document.querySelectorAll('.media-item');

        images.forEach(img => {
            img.addEventListener('click', (e) => {
                const fullSrc = e.target.getAttribute('data-full-src');
                lightboxImg.src = fullSrc;
                lightbox.classList.add('active');
            });
        });

        lightbox.addEventListener('click', () => {
            lightbox.classList.remove('active');
            setTimeout(() => { lightboxImg.src = ''; }, 200);
        });
    </script>
</body>
</html>