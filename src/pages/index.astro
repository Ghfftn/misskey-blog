            overflow: hidden; /* å®¹å™¨æœ¬èº«ä¸æ»š */
        }

        .scroll-column {
            height: 100%; /* å æ»¡é«˜åº¦ */
            overflow-y: auto; /* åªæœ‰è¿™é‡Œæ»šåŠ¨ */
            padding: 20px;
            scroll-behavior: smooth;
        }

        /* ä¸“é—¨å®šåˆ¶æ»šåŠ¨æ¡ */
        .scroll-column::-webkit-scrollbar { width: 6px; }
        .scroll-column::-webkit-scrollbar-track { background: transparent; }
        .scroll-column::-webkit-scrollbar-thumb { background: #333; border-radius: 3px; }
        .scroll-column::-webkit-scrollbar-thumb:hover { background: #555; }

        .column-left { border-right: 1px solid var(--border); } /* ä¸­é—´åŠ æ¡çº¿ */

        /* æ ç›®æ ‡é¢˜ */
        .column-label {
            position: sticky; top: 0; z-index: 5; /* æ ‡é¢˜å¸é¡¶ */
            background: rgba(5, 5, 5, 0.9); backdrop-filter: blur(5px);
            padding: 10px 0; margin-bottom: 20px;
            font-family: 'JetBrains Mono', monospace; color: var(--text-sub); font-size: 0.8em;
            text-transform: uppercase; letter-spacing: 1px;
            display: flex; align-items: center; gap: 10px; border-bottom: 1px solid var(--border);
        }
        /* ä¿®æ”¹åçš„äº®ç»¿ç‚¹ */
        .column-label::before {
            content: ''; width: 6px; height: 6px; 
            background: var(--terminal-green); border-radius: 50%; 
            box-shadow: 0 0 8px var(--terminal-green);
        }

        /* --- å¡ç‰‡æ ·å¼ (å¾®è°ƒä»¥é€‚åº”æ–°å¸ƒå±€) --- */
        .card {
            background: var(--card-bg);
            border: 1px solid var(--border); border-radius: 12px; padding: 20px; margin-bottom: 20px;
            transition: all 0.2s ease;
            animation: fade-in-up 0.5s ease-out forwards; opacity: 0;
        }
