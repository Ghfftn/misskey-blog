---
// src/pages/index.astro

const INSTANCE = 'https://sshup.com'; 
const USER_ID = 'aid0j1fyuf3i0003'; 
const SITE_TITLE = '否极泰来 | Universe';
const SITE_ICON = 'https://sshup.com/files/thumbnail-b457fa5b-1189-427d-baa7-389673f93283';

let mediaNotes = []; 
let textNotes = [];
let errorMsg = '';

try {
  const response = await fetch(`${INSTANCE}/api/users/notes`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      userId: USER_ID,
      limit: 60,
      includeReplies: false, 
      includeMyRenotes: true 
    }),
  });

  if (!response.ok) throw new Error('API Error');
  const allNotes = await response.json();

  allNotes.forEach(note => {
    const target = note.renote || note;
    const hasMedia = target.files && target.files.length > 0;
    if (hasMedia) mediaNotes.push(note);
    else textNotes.push(note);
  });

} catch (e) {
  errorMsg = 'System Offline';
}

const formatDate = (isoString) => {
    return new Date(isoString).toLocaleDateString('zh-CN', {
        month: 'numeric', day: 'numeric', hour: '2-digit', minute:'2-digit'
    });
};
---

<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{SITE_TITLE}</title>
    <link rel="icon" href={SITE_ICON} />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --bg-color: #050505;
            --card-bg: rgba(24, 24, 27, 0.6);
            --border: rgba(255, 255, 255, 0.1);        
            --text-main: #e4e4e7;     
            --text-sub: #a1a1aa;      
            --terminal-green: #39ff14; 
            --accent-gradient: linear-gradient(135deg, #4ade80 0%, #3b82f6 50%, #8b5cf6 100%);
        }

        body { 
            font-family: 'Inter', sans-serif; 
            margin: 0; padding: 0;
            color: var(--text-main);
            height: 100vh;
            background-color: var(--bg-color);
            background-image: 
                radial-gradient(circle at 50% -10%, #1a2e25 0%, transparent 60%),
                radial-gradient(circle at 90% 90%, #0f172a 0%, transparent 40%);
            background-attachment: fixed;
            overflow: hidden; 
            display: flex;
            flex-direction: column;
        }

        /* --- 1. 顶部 Header (彻底隐形) --- */
        .header-bar {
            height: 80px;
            padding: 0 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            /* 关键修改：去掉边框，去掉背景色，让它完全透明 */
            border-bottom: none; 
            background: transparent; 
            z-index: 10;
            flex-shrink: 0;
            /* 稍微加一点点头部的渐变遮罩，防止文字和背景混在一起太难看，但非常淡 */
            background: linear-gradient(to bottom, rgba(5,5,5,0.8) 0%, rgba(5,5,5,0) 100%);
        }

        .header-left { display: flex; flex-direction: column; }
        
        h1 { 
            font-size: 1.5rem; font-weight: 800; margin: 0; letter-spacing: -0.5px;
            background: var(--accent-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            /* 增加一点文字阴影，防止背景太亮看不清 */
            filter: drop-shadow(0 2px 10px rgba(0,0,0,0.5));
        }
        
        .subtitle {
            font-family: 'JetBrains Mono', monospace; font-size: 0.75rem; color: var(--text-sub); margin-top: 4px;
            text-shadow: 0 1px 2px rgba(0,0,0,0.8);
        }

        .header-right { display: flex; align-items: center; gap: 15px; }

        .status-badge {
            font-family: 'JetBrains Mono', monospace; font-size: 0.75rem;
            color: var(--terminal-green); background: rgba(0, 0, 0, 0.3); /* 背景加深一点 */
            padding: 4px 10px; border-radius: 4px; border: 1px solid rgba(57, 255, 20, 0.2);
            display: flex; align-items: center; gap: 6px;
            backdrop-filter: blur(4px);
        }
        .status-dot { width: 6px; height: 6px; background: var(--terminal-green); border-radius: 50%; box-shadow: 0 0 8px var(--terminal-green); animation: pulse 2s infinite; }

        .rss-btn {
            color: var(--text-sub); text-decoration: none; display: flex; align-items: center; gap: 6px;
            font-size: 0.8rem; font-weight: 600; padding: 6px 12px; border-radius: 6px;
            border: 1px solid rgba(255,255,255,0.1); transition: all 0.2s;
            background: rgba(0,0,0,0.2); backdrop-filter: blur(4px);
        }
        .rss-btn:hover { border-color: var(--terminal-green); color: var(--terminal-green); background: rgba(57, 255, 20, 0.05); }
        .rss-icon { width: 16px; height: 16px; fill: currentColor; }

        /* --- 2. 容器与滚动 --- */
        .dashboard-container {
            flex: 1;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 0;
            overflow: hidden;
            /* 给整个内容区顶部加一点内边距，以免直接顶到 Header */
            padding-top: 10px; 
        }

        .scroll-column {
            height: 100%;
            overflow-y: auto;
            /* 修改：去掉原来的内边距，让滚动条贴边，内容靠 padding 撑开 */
            padding: 0 20px 40px 20px; 
            scroll-behavior: smooth;
            /* 关键：隐藏掉滚动条的轨道，让它看起来是悬浮的 */
            scrollbar-width: thin;
            scrollbar-color: rgba(255,255,255,0.1) transparent;
        }

        /* Webkit 滚动条美化 */
        .scroll-column::-webkit-scrollbar { width: 4px; }
        .scroll-column::-webkit-scrollbar-track { background: transparent; }
        .scroll-column::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 2px; }

        .column-left { 
            /* 关键修改：把实线边框改成更加隐蔽的渐变线，或者干脆只用一点点阴影 */
            border-right: 1px solid rgba(255,255,255,0.05); 
        }

        /* --- 3. 卡片样式 --- */
        .card {
            background: var(--card-bg);
            border: 1px solid var(--border); border-radius: 12px; padding: 20px; margin-bottom: 20px;
            transition: all 0.2s ease;
            animation: fade-in-up 0.5s ease-out forwards; opacity: 0;
            /* 确保内容不会贴到卡片边缘 */
        }
        .card:hover { transform: translateY(-2px); border-color: rgba(74, 222, 128, 0.4); background: rgba(30, 30, 35, 0.8); }

        .user-header { display: flex; align-items: center; gap: 10px; margin-bottom: 12px; }
        .avatar { width: 36px; height: 36px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.1); }
        .username { font-weight: 700; font-size: 0.95rem; }
        .text-content { line-height: 1.6; color: #d4d4d8; font-size: 0.9rem; margin-bottom: 12px; }
        
        /* 删除了 'FWD:' 那个标记，只保留评论框 */
        .renote-box { 
            background: rgba(0,0,0,0.3); border-left: 2px solid #555; padding: 10px; margin-bottom: 10px; 
            font-size: 0.85em; color: #999; font-family: 'JetBrains Mono', monospace;
        }
        
        .media-grid { display: grid; gap: 4px; border-radius: 8px; overflow: hidden; margin-bottom: 12px; }
        .media-grid[data-count="1"] { grid-template-columns: 1fr; }
        .media-grid[data-count="2"] { grid-template-columns: 1fr 1fr; }
        .media-grid[data-count="3"], .media-grid[data-count="4"] { grid-template-columns: 1fr 1fr; }
        .media-item { width: 100%; height: 180px; object-fit: cover; cursor: zoom-in; background: #222; transition: opacity 0.2s; }
        .media-item:hover { opacity: 0.8; }

        .card-footer { padding-top: 12px; border-top: 1px solid var(--border); display: flex; justify-content: space-between; font-size: 0.75em; color: #666; font-family: 'JetBrains Mono', monospace; }
        .original-link { color: #fff; text-decoration: none; font-weight: 600; padding: 3px 8px; border-radius: 4px; background: rgba(255,255,255,0.05); }
        .original-link:hover { background: var(--terminal-green); color: #000; }

        #lightbox { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.9); display: flex; justify-content: center; align-items: center; z-index: 9999; opacity: 0; pointer-events: none; transition: opacity 0.2s; backdrop-filter: blur(10px); }
        #lightbox.active { opacity: 1; pointer-events: all; }
        #lightbox img { max-width: 95%; max-height: 95%; border-radius: 4px; box-shadow: 0 0 30px rgba(0,0,0,0.5); }

        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
        @keyframes fade-in-up { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        @media (max-width: 768px) {
            body { height: auto; overflow: auto; display: block; }
            .header-bar { position: sticky; top: 0; padding: 0 15px; background: rgba(5,5,5,0.95); }
            .dashboard-container { display: block; padding-top: 10px;}
            .scroll-column { height: auto; overflow: visible; padding: 10px 15px; }
            .column-left { border-right: none; border-bottom: 1px solid var(--border); }
        }
    </style>
</head>
<body>

    <header class="header-bar">
        <div class="header-left">
            <h1>否极泰来 <span style="font-weight:300; opacity:0.7;">UNIVERSE</span></h1>
            <div class="subtitle">> connecting to sshup.com...</div>
        </div>
        <div class="header-right">
            <div class="status-badge"><span class="status-dot"></span>SYSTEM ONLINE</div>
            <a href="/rss.xml" class="rss-btn" target="_blank" title="Subscribe RSS">
                <svg class="rss-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/></svg>
                RSS
            </a>
        </div>
    </header>

    <main class="dashboard-container">
        <div class="scroll-column column-left">
            {errorMsg && <div style="color:red; margin-bottom:20px;">{errorMsg}</div>}
            {mediaNotes.map((note, index) => {
                const target = note.renote || note;
                return (
                    <article class="card" style={`animation-delay: ${index * 0.05}s`}>
                        <div class="user-header">
                            <img class="avatar" src={target.user.avatarUrl} loading="lazy"/>
                            <span class="username">{target.user.name || target.user.username}</span>
                        </div>
                        {target.text && <div class="text-content">{target.text}</div>}
                        {target.files && (
                            <div class="media-grid" data-count={target.files.length}>
                                {target.files.map(file => (
                                    file.type.startsWith('image') ?
                                    <img src={file.thumbnailUrl || file.url} class="media-item" loading="lazy" data-full-src={file.url} /> 
                                    : <video src={file.url} controls style="width:100%"></video>
                                ))}
                            </div>
                        )}
                        <div class="card-footer">
                            <span class="date">{formatDate(note.createdAt)}</span>
                            <a href={`${INSTANCE}/notes/${note.id}`} target="_blank" class="original-link">RAW ↗</a>
                        </div>
                    </article>
                )
            })}
        </div>

        <div class="scroll-column column-right">
            {textNotes.map((note, index) => {
                const isRenote = !!note.renote;
                const target = isRenote ? note.renote : note;
                return (
                    <article class="card" style={`animation-delay: ${(index * 0.05) + 0.2}s`}>
                        <div class="user-header">
                            <img class="avatar" src={target.user.avatarUrl} loading="lazy"/>
                            <div class="username">{target.user.name || target.user.username}</div>
                        </div>
                        <div class="text-content">{target.text}</div>
                        {isRenote && note.text && (
                            <div class="renote-box"> // comment: <br> {note.text} </div>
                        )}
                        <div class="card-footer">
                            <span class="date">{formatDate(note.createdAt)}</span>
                            <a href={`${INSTANCE}/notes/${note.id}`} target="_blank" class="original-link">RAW ↗</a>
                        </div>
                    </article>
                )
            })}
        </div>
    </main>

    <div id="lightbox"><img id="lightbox-img" src="" alt="Full view" /></div>

    <script>
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        document.querySelectorAll('.media-item').forEach(img => {
            img.addEventListener('click', (e) => {
                lightboxImg.src = e.target.getAttribute('data-full-src');
                lightbox.classList.add('active');
            });
        });
        lightbox.addEventListener('click', () => lightbox.classList.remove('active'));
    </script>
</body>
</html>